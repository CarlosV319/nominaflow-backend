    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }

        @page {
            size: A4 portrait;
            margin: 0.5cm;
        }

        /* Adjusted font sizes */
        .text-body {
            font-size: 8px;
            line-height: 1.25;
        }

        .text-title {
            font-size: 10px;
            font-weight: 700;
        }

        .text-number {
            font-size: 9px;
            letter-spacing: -0.025em;
            white-space: nowrap;
        }

        .bg-header {
            background-color: #F3F4F6;
        }

        /* Custom Widths for alignment */
        .w-col-codigo {
            width: 8%;
        }

        .w-col-concepto {
            width: 33%;
        }

        .w-col-unidades {
            width: 9%;
        }

        .w-col-haberes {
            width: 16%;
        }

        .w-col-norem {
            width: 17%;
        }

        .w-col-descuento {
            width: 17%;
        }
